<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signandlog.SignUpActivity"
    android:background="@drawable/background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#fff"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_margin="20dp"
        android:id="@+id/signuptext"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/signuptext"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        android:id="@+id/namelayout"
        >
        <EditText
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/firstnamesign"
            android:background="@drawable/inputshape"
            android:hint="First name"
            android:layout_gravity="center"

            android:padding="20dp"
            android:focusable="true"
            />

        <EditText
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/lastnamesign"
            android:background="@drawable/inputshape"
            android:hint="Last name"
            android:padding="20dp"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/emailsign"
            android:background="@drawable/inputshape"
            android:hint="Email"
            android:padding="20dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/namelayout"
            android:inputType="textEmailAddress"
            />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/phonesign"
        android:background="@drawable/inputshape"
        android:hint="Phone"
        android:padding="20dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/emailsign"
        android:inputType="phone"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/passsign"
        android:background="@drawable/inputshape"
        android:hint="Password"
        android:padding="20dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/phonesign"
        android:inputType="textPassword"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:padding="20dp"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btnloginsign"
            android:background="@drawable/btnshape"
            android:text="Login"
            android:textColor="#fff"
            android:layout_gravity="center"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btnsign"
            android:background="@drawable/btnshape"
            android:text="Sign Up"
            android:textColor="#fff"
            android:layout_gravity=""
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>