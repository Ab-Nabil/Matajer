<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signandlog.LoginActivity"
    android:background="@drawable/background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_margin="20dp"
        android:id="@+id/logintext"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/emaillogin"
        android:background="@drawable/inputshape"
        android:hint="Email"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/logintext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:inputType="textEmailAddress"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/passlogin"
        android:background="@drawable/inputshape"
        android:hint="Password"
        android:padding="20dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/emaillogin"
        android:inputType="textPassword"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forget password ?"
        android:textColor="#005682"
        android:textSize="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passlogin"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_margin="20dp"
        android:id="@+id/forgetpasstext"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:padding="20dp"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btnsignlogin"
            android:background="@drawable/btnshape"
            android:text="Sign Up"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginRight="60dp"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btnlogin"
            android:background="@drawable/btnshape"
            android:text="Login"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>